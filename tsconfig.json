{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".", 
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}